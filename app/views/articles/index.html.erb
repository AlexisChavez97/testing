<h1>Showing all articles</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |articles| %>
      <tr>
        <td><%= articles.title %></td>
        <td><%= articles.description %></td>
        <td><%= link_to 'Show', articles %></td>
        <td><%= link_to 'Edit', edit_article_path(articles) %></td>
        <td><%= link_to 'Destroy', articles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create an article', new_article_path %>

